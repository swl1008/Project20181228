<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_36"
    android:paddingRight="@dimen/dp_36"
    android:background="@mipmap/login_register_background"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/login_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:hint="手机号"
        android:textColor="@color/white"
        android:inputType="number"
        android:textCursorDrawable="@drawable/cursor_color"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_160"
        android:drawableLeft="@mipmap/login_icon_phone"
        android:drawablePadding="@dimen/dp_20"
        android:textColorHint="#fff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/login_edit_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:hint="登录密码"
        android:password="true"
        android:textColor="@color/white"
        android:inputType="number"
        android:textCursorDrawable="@drawable/cursor_color"
        android:background="@null"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:drawableRight="@mipmap/login_icon_eye"
        android:drawablePadding="@dimen/dp_20"
        android:textColorHint="#fff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <CheckBox
            android:id="@+id/login_checkbox_remember"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="记住密码"
            android:theme="@style/MyCheckBox"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="@dimen/dp_14"
            />
        <TextView
            android:id="@+id/login_text_register"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="快速注册"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="@dimen/dp_14"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:textColor="#f00"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/register_btn_shape"
        />



</LinearLayout>